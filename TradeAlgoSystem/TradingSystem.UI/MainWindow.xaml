<Window x:Class="TradingSystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradingSystem.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="937" Width="1800" WindowStartupLocation="CenterScreen" Background="#FFA7A6A6">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="562*"/>
            <RowDefinition Height="359*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="398*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="485*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="start_btn" Content="Start" HorizontalAlignment="Left" Margin="258,461,0,0" VerticalAlignment="Top" Height="60" Width="266" FontSize="18" FontWeight="Bold" Click="start_btn_Click"/>
        <TextBox x:Name="tick_tb" HorizontalAlignment="Left" Margin="234,281,0,0" HorizontalContentAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" FontSize="25" FontFamily="Arial" Height="51" FontWeight="Bold" Grid.Column="2"/>
        <TextBox x:Name="vol_tb" HorizontalAlignment="Left" Margin="60,281,0,0" HorizontalContentAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" FontSize="25" FontFamily="Arial" Height="51" FontWeight="Bold" Grid.Column="2"/>
        <TextBox x:Name="delta_tb" HorizontalAlignment="Left" Margin="406,281,0,0" HorizontalContentAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="146" FontSize="25" FontFamily="Arial" Height="51" FontWeight="Bold" Grid.Column="2"/>
        <TextBox x:Name="time_tb" HorizontalAlignment="Left" Margin="574,281,0,0" HorizontalContentAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="147" FontSize="25" FontFamily="Arial" Height="51" FontWeight="Bold" Grid.Column="2"/>
        <GroupBox Header="Proccessing" Margin="5,0,5,3" FontSize="22" FontFamily="Palatino Linotype">

        </GroupBox>




        <GroupBox Header="GroupBox" Grid.Column="2"/>
        <GroupBox Header="     Log" FontWeight="Bold"  Foreground="White"
           Background="black" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                   Background="Black" Foreground="White" Margin="-4,0,-2,-4">
                <TextBlock x:Name="logBlock" FontSize="16" TextWrapping="Wrap" FontWeight="Light" FontFamily="Arial" Width="1794" Height="339"/>
            </ScrollViewer>
        </GroupBox>
        <TextBox IsReadOnly="True" TextAlignment="Center" Margin="136,111,354,410">
            <MultiBinding Converter="{StaticResource priceConv}">
                <Binding Path="Leg1"></Binding>
                <Binding Path="Leg1.Ask"></Binding>
            </MultiBinding>
        </TextBox>
        <TextBox VerticalAlignment="Top" IsReadOnly="True" TextAlignment="Center" Margin="136,172,354,0" Height="42">
            <TextBox.Text>
                <MultiBinding Converter="{StaticResource priceConv}">
                    <Binding Path="Leg2"></Binding>
                    <Binding Path="Leg2.Ask"></Binding>
                </MultiBinding>
            </TextBox.Text>
        </TextBox>
        <TextBox IsReadOnly="True" TextAlignment="Center" Margin="466,0,0,410" HorizontalAlignment="Left" Width="306" Height="41" VerticalAlignment="Bottom">
            <TextBox.Text>
                <MultiBinding Converter="{StaticResource priceConv}">
                    <Binding Path="Leg1"></Binding>
                    <Binding Path="Leg1.Bid"></Binding>
                </MultiBinding>
            </TextBox.Text>
        </TextBox>
        <TextBox VerticalAlignment="Top" IsReadOnly="True" TextAlignment="Center" HorizontalAlignment="Right" Width="306" Margin="0,172,24,0" Height="42">
            <TextBox.Text>
                <MultiBinding Converter="{StaticResource priceConv}">
                    <Binding Path="Leg2"></Binding>
                    <Binding Path="Leg2.Bid"></Binding>
                </MultiBinding>
            </TextBox.Text>
        </TextBox>
    </Grid>
</Window>
